<script>
	function SendNewPasswordData(){
		if($('#form_new_password').valid()==true){
			$.post("/front/setPassword",{
				Password:$("input[name='m_new_password']").val(),
				Password_RE:$("input[name='m_new_password_confirm']").val(),
			},function(data){
				if(data != 'success'){
					toastr.error( '',data, {
						"positionClass": "toast-bottom-full-width",
						"timeOut": "3000",
						"closeButton": true
					});
				}else{
					$('#newPasswordMessage').css('display','');
					$('#new_password').css('display','none');
					$('#newPasswordMessage').text('重置密碼成功!下次登入請使用新密碼進行登入!');
				}
			},'html');
		}
	}
</script>